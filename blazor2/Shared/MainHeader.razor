                class="nav-link" 
                aria-current="page" 
                href="/" 
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Home
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/login"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Login
            </NavLink>
        </li>


        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/profile"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Profile
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/admin"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                ADMIN
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/product-list"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Product List
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/change-car-color"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Car
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink 
                class="nav-link" 
                href="/register"
                activeClass="active"
                Match="NavLinkMatch.All"
            >
                Register
            </NavLink>
        </li>
    </ul>
</header>
<section>
    @Body
</section>