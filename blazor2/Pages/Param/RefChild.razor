<div>
    <h1>Số hiện tại là: @Number</h1>
</div>

@code {
    public int Number { get; set; } = 0;
    public void Tang() 
    {
        Console.WriteLine("Tăng số");
        Console.WriteLine(Number);
        Number++;
        StateHasChanged(); // lệnh yêu cầu cập nhật lại giao diện
        // nếu không thêm lệnh này thì phía server phải có sự thay đổi về code
        // thì server mới render lại giao diện
        // vì khi gọi hàm con từ cha qua @ref, blazor không biết có thay đổi giá trị bên trong
        // component con nên cần gọi hàm này để cập nhật lại giao diện
    }
}