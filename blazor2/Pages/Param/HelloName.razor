@ChildContent
<div>
    @* hiển thị tên đường truyền từ cha xuống *@
    @fullName
</div>


@code {
    @* Mỗi lần truyền tham số nào thì nó sẽ nhận tham số đó và hiển thị lên *@
    [Parameter]
    public string fullName { get; set; }
    @* Đối với các thẻ hoặc component bên trong thì phải khai báo đúng như bên dưới *@
    [Parameter]
    public RenderFragment ChildContent { get; set; }

}