@page "/shoeshop"
@using System.Runtime.InteropServices.Marshalling
@using Microsoft.AspNetCore.SignalR.Client
@inject ShoeShopStateService _shoeShopStateService
@inject NavigationManager _navigationManager

<div class="container">
    <h3 class="mb-4">Shoe Shop</h3>
    <a href="/shoeshop/add" class="btn btn-primary">Add New Shoe</a>
    <div class="row g-4">
        @if (lsProduct != null)
        {
            foreach (var shoe in lsProduct)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card shadow-sm h-100 border-0 rounded-4">
                        <img src="@shoe.image" class="card-img-top p-3 rounded-4" alt="@shoe.name" style="object-fit:contain; height:220px; background:#f8f9fa;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-primary">@shoe.name</h5>
                            <h6 class="text-danger mb-2">$@shoe.price</h6>
                            <p class="card-text text-muted" style="min-height:48px;">@shoe.shortDescription</p>
                            <div class="mb-3">
                                <span class="fw-semibold">Sizes:</span>
                                <div class="d-flex flex-wrap gap-2 mt-2">
                                    @if (shoe.sizes != null)
                                    {
                                        foreach (var size in shoe.sizes)
                                        {
                                            <span class="badge bg-light text-dark border border-secondary px-3 py-2">@size</span>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center gap-2 mt-auto">
                                <a href="/shoeshop/@shoe.id" class="btn btn-success mt-auto w-100 fw-bold">View</a>
                                @* xoá *@
                                <button class="btn btn-danger mt-auto w-100 fw-bold"
                                    @onclick="() => _shoeShopStateService.DeleteShoe(shoe.id)">Delete</button>
                                    @* sửa *@
                                <a class="btn btn-primary mt-auto w-100 fw-bold" href="/shoeshop/edit/@shoe.id">Edit   
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">No products found.</div>
        }
    </div>
</div>

@code {
    public List<ProductShoeShopVM> lsProduct = new List<ProductShoeShopVM>();
    HubConnection _hubConnection;
    protected override async Task OnInitializedAsync() {
        // kết nối tới hub
        _hubConnection = new HubConnectionBuilder()
            .WithUrl($"{_navigationManager.ToAbsoluteUri("/shoeShopHub")}")
            .WithAutomaticReconnect() // tự động kết nối lại khi bị disconnect
            .Build();
        await _hubConnection.StartAsync(); // bắt đầu kết nối đến hub

        // lắng nghe sự kiện từ hub
        // client lắng nghe: On + <tên sự kiện>
        _hubConnection.On<List<ProductShoeShopVM>>("ShoeList", async(shoe) => {
            Console.WriteLine(1111);
            lsProduct = shoe;
            await InvokeAsync(StateHasChanged);
        });

        @* await _shoeShopStateService.GetAllData(); *@
    }
}