@page "/product-list"
@*  ds nhiều sản phẩm *@
@* 
COMPONENT PARAMETERs
- truyền dữ liệu từ cha xuống con

YÊU CẦU : viết page hiển thị câu xin chào , thông tin tên của bạn (component con nhận parameter string fullname từ cha truyền xuống)
*@

@* DANH SACH SAN PHAM *@

<div class="row">
    @foreach(ProductVM item in products) {
        <ProductCart item="@item" AddToCartt="@AddToCart"/>

    }
</div>

@* GIỎ HÀNG *@
<h3>Giỏ hàng</h3>
<div>
    @foreach (ProductVM item in cart) {
        <p>@item.Name - @item.Price</p>
    }
</div>


@code {
    List<ProductVM> products = new List<ProductVM>
    {
        new ProductVM { Name = "Product 1", Description = "Description 1", Price = 10.99m, ImageUrl = "https://i.pravatar.cc?u=1" },
        new ProductVM { Name = "Product 2", Description = "Description 2", Price = 12.99m, ImageUrl = "https://i.pravatar.cc?u=2" },
        new ProductVM { Name = "Product 3", Description = "Description 3", Price = 15.99m, ImageUrl = "https://i.pravatar.cc?u=3" }
    };

    List<ProductVM> cart = new List<ProductVM>();

    @* Hàm thêm sản phẩm vào giỏ hàng *@
    private void AddToCart(ProductVM product) 
    {
        cart.Add(product);
    }
}